{
    "name": "wudege/tforms",
    "description": "TForms is a flexible forms validation library for PHP API project.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "wudege",
            "email": "hi@wudege.me"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^5.6 || ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.6",
        "squizlabs/php_codesniffer": "^2.7",
        "satooshi/php-coveralls": "^1.0"
    },
    "autoload": {
        "files": [
            "src/TForms/functions.php"
        ],
        "psr-4": {
            "TForms\\": "src/TForms"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TForms\\Tests\\": "tests/TForms/Tests"
        }
    }
}
